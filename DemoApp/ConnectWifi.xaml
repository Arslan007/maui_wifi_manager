<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemoApp.ConnectWifi"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ConnectWifi">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            HorizontalOptions="FillAndExpand"
            Spacing="0"
            VerticalOptions="Center">
            <Label
                Margin="0,4"
                FontSize="12"
                Text="Enter WI-Fi SSID" />
            <Border Padding="6,0">
                <Entry
                    x:Name="WifiSsid"
                    Placeholder="Wi-Fi SSID"
                    Text="Minions_5" />
            </Border>

            <Label
                Margin="0,12,0,4"
                FontSize="12"
                Text="Enter WI-Fi Password" />
            <Border Padding="6,0">
                <Entry
                    x:Name="WifiPassword"
                    Placeholder="Wi-Fi Password"
                    Text="CLB2727979" />
            </Border>

            <Button
                x:Name="ConnectBtn"
                Grid.Column="0"
                Margin="0,16"
                Clicked="ConnectBtnClicked"
                FontSize="12"
                Text="Connect Wi-FI"
                TextTransform="Uppercase" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>