<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemoApp.ScanListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Wi-Fi List">
    <NavigationPage.TitleView>
        <StackLayout HorizontalOptions="EndAndExpand" Orientation="Horizontal">
            <Button Clicked="Button_Clicked" Text="Refresh" />
        </StackLayout>
    </NavigationPage.TitleView>
    <StackLayout>
        <CollectionView x:Name="myCollectionView" SelectionMode="Single">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!--  Your DataTemplate for each item in the collection  -->
                    <StackLayout>
                        <Label Text="{Binding Name}" />
                        <!--  Add other controls as needed for your data  -->
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>